{
  "manifest_version": 3,
  "name": "Bulk Chat & Memory Deleter for chatgpt.com",
  "version": "1.0.0",
  "description": "Bulk delete chat history and memories on chatgpt.com. Unofficial extension. Not affiliated with OpenAI.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://chatgpt.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["src/content-api.ts"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/fetch-interceptor.js"],
      "matches": ["https://chatgpt.com/*"]
    }
  ]
}
